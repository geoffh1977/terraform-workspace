# Cross Platform Editor Configuration Manager - http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[{*.{yml,yaml},.markdownlint,.yamllint}]
indent_size = 2

[{*.dockerfile,Dockerfile}]
indent_size = 2

[docker-compose.{yml,yaml}]
indent_size = 2

[{*.sh,*.bash}]
indent_size = 2

[*.md]
indent_size = 2

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
